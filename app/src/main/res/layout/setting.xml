<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Setting"
        android:text="设置"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="3%"
        android:textColor="#000000"
        />
    <ImageView
        android:background="#000000"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@id/Setting"
        app:layout_marginTopPercent="1%"
        />
    <TextView
        android:id="@+id/voice_effect"
        android:textSize="24sp"
        android:text="音效"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="14%"
        />
    <Switch
        android:id="@+id/btn1"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="14%"
        />
    <ImageView
        android:background="#000000"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@id/voice_effect"
        app:layout_marginTopPercent="1%"
        />
    <TextView
        android:id="@+id/background_voice"
        android:text="背景音乐"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_marginTopPercent="22%"
        app:layout_marginLeftPercent="5%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Switch
        android:id="@+id/btn2"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="22%"
        />
    <ImageView
        android:background="#000000"
        android:layout_below="@+id/background_voice"
        app:layout_marginTopPercent="1%"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        />
    <TextView
        android:text="通知"
        android:id="@+id/notify"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="30%"
        app:layout_marginLeftPercent="5%"
        />
    <Switch
        android:id="@+id/btn3"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="30%"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/notify"
        app:layout_marginTopPercent="1%"
        android:id="@+id/imageView" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/setting_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:layout_marginBottomPercent="5%"
        app:layout_marginRightPercent="5%"
        />


</android.support.percent.PercentRelativeLayout>